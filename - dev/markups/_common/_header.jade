header.header
	.header__top
		.container
			.header__top-left
				ul.socials
					- var socials = ['fb', 'vk', 'tw']
					each item in socials
						li.socials__item
							a(href="#" class="socials__link socials__link-#{item}") #{item}
			.header__top-right
				.adress ул.Маяковского 6, офис 17
				a(href="tel:+79211231213").phone +7 (921) 123-12-13
	.header__bottom
		.container
			a(href="#").logo
				img(src="img/logo.png" alt="логотип").logo__img
				.logo__text cooltech
			.search
				form.search__form
					input(name="" type="text" placeholder="Поиск").search__form-input
					button(name="" type="sybmit" value="Найти").search__form-button Найти
				.menu-header
					ul.menu-header__list
						-var menu = ['Карта проезда', 'История заказов', 'Корзина']
						each item in menu
							li.menu-header__item
								a(href="#").menu-header__link= item
